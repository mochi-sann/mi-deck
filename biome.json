{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "apps/**/{src}/**",
      "!**/tsconfig.json",
      "!**/tsconfig.app.json",
      "!**/tsconfig.node.json",
      "!**/vscode",
      "!**/apps/server/bin",
      "!**/apps/server/lib",
      "!**/apps/server/dist",
      "!**/apps/front/dist",
      "!**/apps/front/src/routeTree.gen.ts",
      "!**/apps/front/styled-system",
      "!**/apps/front/src/lib/api/type.ts",
      "!**/misskey-db",
      "!**/apps/server/src/generated/prisma",
      "!**/.devbox",
      "!**//nix",
      "!**/apps/front/storybook-static/",
      "!**/apps/front/coverage",
      "!**/playwright-report/"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "noUselessElse": "off",
        "useImportType": "off",
        "useNamingConvention": "error",
        "noParameterAssign": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
