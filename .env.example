# Database Configuration
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="mydb"
POSTGRES_SSL_MODE="disable"

# JWT Configuration
JWT_SECRET="" # openssl rand -base64 32 で生成
JWT_EXPIRE="24h" # 例: 24h, 7d

# App Configuration
APP_ENV="development" # production/staging/development
APP_PORT="8080"
APP_HOST="0.0.0.0"

# CORS Configuration
CORS_ALLOW_ORIGINS="*" # 本番環境では具体的なドメインを指定
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="Content-Type,Authorization"

# Session Configuration
SESSION_TIMEOUT="3600" # 秒数

# Logging Configuration
LOG_LEVEL="debug" # productionではinfo推奨
LOG_FORMAT="json" # text/json

# Monitoring
PROMETHEUS_ENABLED="false"


